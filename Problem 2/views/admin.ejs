<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel - Express Session App</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="container">
        <nav class="navbar">
            <div class="nav-brand">
                <h2>Admin Panel</h2>
            </div>
            <div class="nav-menu">
                <a href="/dashboard" class="nav-link">Dashboard</a>
                <a href="/profile" class="nav-link">Profile</a>
                <a href="/admin" class="nav-link active">Admin</a>
                <form action="/logout" method="POST" class="logout-form">
                    <button type="submit" class="logout-btn">Logout</button>
                </form>
            </div>
        </nav>

        <div class="admin-container">
            <div class="admin-header">
                <h1>System Administration</h1>
                <p>Manage users and monitor active sessions</p>
            </div>

            <div class="admin-grid">
                <!-- Active Sessions Card -->
                <div class="card full-width">
                    <div class="card-header">
                        <h3>Active Sessions</h3>
                        <div class="session-count">
                            <span class="count-badge"><%= sessions.length %></span>
                            <span>Total Sessions</span>
                        </div>
                    </div>
                    <div class="card-content">
                        <% if (sessions.length === 0) { %>
                            <div class="empty-state">
                                <p>No active sessions found</p>
                            </div>
                        <% } else { %>
                            <div class="table-container">
                                <table class="sessions-table">
                                    <thead>
                                        <tr>
                                            <th>Session ID</th>
                                            <th>User</th>
                                            <th>Role</th>
                                            <th>Last Access</th>
                                            <th>Expires</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% sessions.forEach(session => { %>
                                            <tr>
                                                <td class="session-id">
                                                    <%= session.sessionId.substring(0, 8) %>...
                                                </td>
                                                <td>
                                                    <% if (session.user) { %>
                                                        <div class="user-info">
                                                            <strong><%= session.user.username %></strong>
                                                            <small><%= session.user.email %></small>
                                                        </div>
                                                    <% } else { %>
                                                        <span class="no-user">No user data</span>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <% if (session.user) { %>
                                                        <span class="role-badge role-<%= session.user.role %>">
                                                            <%= session.user.role %>
                                                        </span>
                                                    <% } else { %>
                                                        -
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <%= new Date(session.lastAccess).toLocaleString() %>
                                                </td>
                                                <td>
                                                    <% if (session.expires) { %>
                                                        <%= new Date(session.expires).toLocaleString() %>
                                                    <% } else { %>
                                                        -
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <% if (session.expires && new Date(session.expires) > new Date()) { %>
                                                        <span class="status-active">Active</span>
                                                    <% } else if (session.error) { %>
                                                        <span class="status-error">Error</span>
                                                    <% } else { %>
                                                        <span class="status-expired">Expired</span>
                                                    <% } %>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        <% } %>
                    </div>
                </div>

                <!-- Users Management Card -->
                <div class="card">
                    <div class="card-header">
                        <h3>Registered Users</h3>
                        <div class="user-count">
                            <span class="count-badge"><%= users.length %></span>
                            <span>Total Users</span>
                        </div>
                    </div>
                    <div class="card-content">
                        <div class="users-list">
                            <% users.forEach(user => { %>
                                <div class="user-item">
                                    <div class="user-avatar">
                                        <%= user.username.charAt(0).toUpperCase() %>
                                    </div>
                                    <div class="user-details">
                                        <h4><%= user.username %></h4>
                                        <p><%= user.email %></p>
                                        <span class="role-badge role-<%= user.role %>"><%= user.role %></span>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                    </div>
                </div>

                <!-- System Stats Card -->
                <div class="card">
                    <div class="card-header">
                        <h3>System Statistics</h3>
                    </div>
                    <div class="card-content">
                        <div class="stats-grid">
                            <div class="stat-item">
                                <div class="stat-value"><%= sessions.length %></div>
                                <div class="stat-label">Active Sessions</div>
                            </div>
                            <div class="stat-item">
                                <div class="stat-value"><%= users.length %></div>
                                <div class="stat-label">Total Users</div>
                            </div>
                            <div class="stat-item">
                                <div class="stat-value">
                                    <%= sessions.filter(s => s.user && s.user.role === 'admin').length %>
                                </div>
                                <div class="stat-label">Admin Sessions</div>
                            </div>
                            <div class="stat-item">
                                <div class="stat-value">File Store</div>
                                <div class="stat-label">Session Store</div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Session Management Card -->
                <div class="card">
                    <div class="card-header">
                        <h3>Session Management</h3>
                    </div>
                    <div class="card-content">
                        <div class="management-actions">
                            <button onclick="refreshSessions()" class="btn btn-primary">
                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <polyline points="23,4 23,10 17,10"></polyline>
                                    <polyline points="1,20 1,14 7,14"></polyline>
                                    <path d="M20.49,9A9,9,0,0,0,5.64,5.64L1,10m22,4L18.36,18.36A9,9,0,0,1,3.51,15"></path>
                                </svg>
                                Refresh Data
                            </button>
                            <button onclick="viewSessionFiles()" class="btn btn-secondary">
                                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M14,2H6A2,2,0,0,0,4,4V20a2,2,0,0,0,2,2H18a2,2,0,0,0,2-2V8Z"></path>
                                    <polyline points="14,2 14,8 20,8"></polyline>
                                    <line x1="16" y1="13" x2="8" y2="13"></line>
                                    <line x1="16" y1="17" x2="8" y2="17"></line>
                                    <polyline points="10,9 9,9 8,9"></polyline>
                                </svg>
                                View Session Files
                            </button>
                        </div>
                        <div class="session-info">
                            <p><strong>Session Store Location:</strong> ./sessions/</p>
                            <p><strong>Session TTL:</strong> 24 hours</p>
                            <p><strong>Cleanup Interval:</strong> 1 hour</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        function refreshSessions() {
            window.location.reload();
        }

        function viewSessionFiles() {
            const sessionData = JSON.parse('<%- JSON.stringify(sessions) %>');
            
            if (sessionData.length === 0) {
                alert('No session files found');
                return;
            }
            
            let fileList = 'Session Files:\n\n';
            sessionData.forEach(session => {
                fileList += `File: ${session.filename || 'unknown'}\n`;
                fileList += `Session ID: ${session.sessionId || 'unknown'}\n`;
                fileList += `User: ${session.user ? session.user.username : 'No user'}\n`;
                fileList += `Last Access: ${session.lastAccess ? new Date(session.lastAccess).toLocaleString() : 'Unknown'}\n\n`;
            });
            
            alert(fileList);
        }

        // Auto-refresh every 30 seconds
        setInterval(() => {
            const refreshBtn = document.querySelector('button[onclick="refreshSessions()"]');
            if (refreshBtn) {
                refreshBtn.textContent = 'Auto-refreshing...';
                setTimeout(() => {
                    window.location.reload();
                }, 1000);
            }
        }, 30000);
    </script>
</body>
</html>
