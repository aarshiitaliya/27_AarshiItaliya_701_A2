<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Express Session App</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="container">
        <div class="login-container">
            <div class="login-header">
                <h1>Welcome Back</h1>
                <p>Please sign in to your account</p>
            </div>
            
            <!-- Display success message -->
            <% if (typeof message !== 'undefined' && message) { %>
                <% if (message === 'logged_out') { %>
                    <div class="success-message">
                        <p>You have been successfully logged out.</p>
                    </div>
                <% } %>
            <% } %>
            
            <!-- Display validation errors -->
            <% if (errors && errors.length > 0) { %>
                <div class="error-container">
                    <ul class="error-list">
                        <% errors.forEach(error => { %>
                            <li><%= error.msg %></li>
                        <% }); %>
                    </ul>
                </div>
            <% } %>

            <form action="/login" method="POST" class="login-form">
                <div class="form-group">
                    <label for="username">Username or Email</label>
                    <input 
                        type="text" 
                        id="username" 
                        name="username" 
                        value="<%= formData.username || '' %>"
                        placeholder="Enter your username or email"
                        required
                        autocomplete="username"
                    >
                    <div class="input-icon">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                            <circle cx="12" cy="7" r="4"></circle>
                        </svg>
                    </div>
                </div>

                <div class="form-group">
                    <label for="password">Password</label>
                    <input 
                        type="password" 
                        id="password" 
                        name="password" 
                        placeholder="Enter your password"
                        required
                        autocomplete="current-password"
                    >
                    <div class="input-icon">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                            <circle cx="12" cy="16" r="1"></circle>
                            <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                        </svg>
                    </div>
                </div>

                <div class="form-group">
                    <button type="submit" class="login-btn">
                        <span>Sign In</span>
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
                            <polyline points="16,17 21,12 16,7"></polyline>
                            <line x1="21" y1="12" x2="9" y2="12"></line>
                        </svg>
                    </button>
                </div>
            </form>

            <div class="demo-credentials">
                <h3>Demo Credentials</h3>
                <div class="credentials-grid">
                    <div class="credential-card">
                        <h4>Admin Account</h4>
                        <p><strong>Username:</strong> admin</p>
                        <p><strong>Password:</strong> password</p>
                        <button onclick="fillCredentials('admin', 'password')" class="fill-btn">Use These</button>
                    </div>
                    <div class="credential-card">
                        <h4>User Account</h4>
                        <p><strong>Username:</strong> user</p>
                        <p><strong>Password:</strong> password</p>
                        <button onclick="fillCredentials('user', 'password')" class="fill-btn">Use These</button>
                    </div>
                </div>
            </div>

            <div class="login-footer">
                <p>This is a demo application showcasing Express.js sessions with file store.</p>
            </div>
        </div>
    </div>

    <script>
        // Fill demo credentials
        function fillCredentials(username, password) {
            document.getElementById('username').value = username;
            document.getElementById('password').value = password;
        }

        // Form validation
        document.querySelector('.login-form').addEventListener('submit', function(e) {
            const username = document.getElementById('username').value.trim();
            const password = document.getElementById('password').value;
            
            if (!username) {
                e.preventDefault();
                alert('Please enter your username or email');
                return;
            }
            
            if (!password) {
                e.preventDefault();
                alert('Please enter your password');
                return;
            }
            
            if (username.length < 3) {
                e.preventDefault();
                alert('Username must be at least 3 characters long');
                return;
            }
            
            if (password.length < 6) {
                e.preventDefault();
                alert('Password must be at least 6 characters long');
                return;
            }
        });

        // Add loading state to button
        document.querySelector('.login-btn').addEventListener('click', function() {
            this.classList.add('loading');
            setTimeout(() => {
                this.classList.remove('loading');
            }, 3000);
        });
    </script>
</body>
</html>
