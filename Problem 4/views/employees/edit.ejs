<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Employee - ERP</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="admin-layout">
        <%- include('../partials/navbar') %>
        
        <div class="main-content">
            <div class="edit-employee">
                <div class="page-header">
                    <h1>‚úèÔ∏è Edit Employee</h1>
                    <div class="header-actions">
                        <a href="/employees/view/<%= employee._id %>" class="btn btn-info">üëÅÔ∏è View Details</a>
                        <a href="/employees" class="btn btn-secondary">‚Üê Back to List</a>
                    </div>
                </div>

                <% if (error) { %>
                    <div class="alert alert-error">
                        <strong>Error:</strong> <%= error %>
                    </div>
                <% } %>

                <% if (success) { %>
                    <div class="alert alert-success">
                        <strong>Success:</strong> <%= success %>
                    </div>
                <% } %>

                <div class="employee-header">
                    <div class="employee-avatar">
                        <%= employee.firstName.charAt(0) + employee.lastName.charAt(0) %>
                    </div>
                    <div class="employee-info">
                        <h3><%= employee.fullName %></h3>
                        <p><%= employee.empId %> ‚Ä¢ <%= employee.department %></p>
                    </div>
                </div>

                <form method="POST" action="/employees/edit/<%= employee._id %>" class="employee-form">
                    <div class="form-section">
                        <h3>üìã Personal Information</h3>
                        <div class="form-row">
                            <div class="form-group">
                                <label for="firstName">First Name *</label>
                                <input type="text" id="firstName" name="firstName" required 
                                       value="<%= employee.firstName %>">
                            </div>
                            <div class="form-group">
                                <label for="lastName">Last Name *</label>
                                <input type="text" id="lastName" name="lastName" required 
                                       value="<%= employee.lastName %>">
                            </div>
                        </div>
                        
                        <div class="form-row">
                            <div class="form-group">
                                <label for="email">Email *</label>
                                <input type="email" id="email" name="email" required 
                                       value="<%= employee.email %>">
                            </div>
                            <div class="form-group">
                                <label for="phone">Phone Number *</label>
                                <input type="tel" id="phone" name="phone" required 
                                       value="<%= employee.phone %>">
                            </div>
                        </div>
                    </div>

                    <div class="form-section">
                        <h3>üè¢ Job Information</h3>
                        <div class="form-row">
                            <div class="form-group">
                                <label for="department">Department *</label>
                                <select id="department" name="department" required>
                                    <option value="">Select Department</option>
                                    <option value="IT" <%= employee.department === 'IT' ? 'selected' : '' %>>IT</option>
                                    <option value="HR" <%= employee.department === 'HR' ? 'selected' : '' %>>HR</option>
                                    <option value="Finance" <%= employee.department === 'Finance' ? 'selected' : '' %>>Finance</option>
                                    <option value="Marketing" <%= employee.department === 'Marketing' ? 'selected' : '' %>>Marketing</option>
                                    <option value="Operations" <%= employee.department === 'Operations' ? 'selected' : '' %>>Operations</option>
                                    <option value="Sales" <%= employee.department === 'Sales' ? 'selected' : '' %>>Sales</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="position">Position *</label>
                                <input type="text" id="position" name="position" required 
                                       value="<%= employee.position %>">
                            </div>
                        </div>
                        
                        <div class="form-row">
                            <div class="form-group">
                                <label for="joiningDate">Joining Date</label>
                                <input type="date" id="joiningDate" name="joiningDate" 
                                       value="<%= new Date(employee.joiningDate).toISOString().split('T')[0] %>">
                            </div>
                            <div class="form-group">
                                <label for="baseSalary">Base Salary (‚Çπ) *</label>
                                <input type="number" id="baseSalary" name="baseSalary" required min="0" step="0.01"
                                       value="<%= employee.baseSalary %>">
                            </div>
                        </div>
                    </div>

                    <div class="form-section">
                        <h3>üí∞ Allowances</h3>
                        <div class="form-row">
                            <div class="form-group">
                                <label for="hra">HRA (‚Çπ)</label>
                                <input type="number" id="hra" name="hra" min="0" step="0.01"
                                       value="<%= employee.allowances.hra %>">
                            </div>
                            <div class="form-group">
                                <label for="transport">Transport Allowance (‚Çπ)</label>
                                <input type="number" id="transport" name="transport" min="0" step="0.01"
                                       value="<%= employee.allowances.transport %>">
                            </div>
                        </div>
                        
                        <div class="form-row">
                            <div class="form-group">
                                <label for="medical">Medical Allowance (‚Çπ)</label>
                                <input type="number" id="medical" name="medical" min="0" step="0.01"
                                       value="<%= employee.allowances.medical %>">
                            </div>
                            <div class="form-group">
                                <label for="otherAllowance">Other Allowance (‚Çπ)</label>
                                <input type="number" id="otherAllowance" name="otherAllowance" min="0" step="0.01"
                                       value="<%= employee.allowances.other %>">
                            </div>
                        </div>
                    </div>

                    <div class="form-section">
                        <h3>üìâ Deductions</h3>
                        <div class="form-row">
                            <div class="form-group">
                                <label for="pf">Provident Fund (‚Çπ)</label>
                                <input type="number" id="pf" name="pf" min="0" step="0.01"
                                       value="<%= employee.deductions.pf %>">
                            </div>
                            <div class="form-group">
                                <label for="tax">Tax (‚Çπ)</label>
                                <input type="number" id="tax" name="tax" min="0" step="0.01"
                                       value="<%= employee.deductions.tax %>">
                            </div>
                        </div>
                        
                        <div class="form-row">
                            <div class="form-group">
                                <label for="insurance">Insurance (‚Çπ)</label>
                                <input type="number" id="insurance" name="insurance" min="0" step="0.01"
                                       value="<%= employee.deductions.insurance %>">
                            </div>
                            <div class="form-group">
                                <label for="otherDeduction">Other Deduction (‚Çπ)</label>
                                <input type="number" id="otherDeduction" name="otherDeduction" min="0" step="0.01"
                                       value="<%= employee.deductions.other %>">
                            </div>
                        </div>
                    </div>

                    <div class="salary-preview">
                        <h3>üíº Updated Salary Calculation</h3>
                        <div class="salary-comparison">
                            <div class="current-salary">
                                <h4>Current Salary</h4>
                                <div class="salary-item">
                                    <span>Net Salary:</span>
                                    <span class="current-net">‚Çπ<%= employee.netSalary.toLocaleString() %></span>
                                </div>
                            </div>
                            <div class="new-salary">
                                <h4>New Salary</h4>
                                <div class="salary-breakdown">
                                    <div class="salary-item">
                                        <span>Base Salary:</span>
                                        <span id="previewBaseSalary">‚Çπ<%= employee.baseSalary.toLocaleString() %></span>
                                    </div>
                                    <div class="salary-item">
                                        <span>Total Allowances:</span>
                                        <span id="previewAllowances">‚Çπ<%= employee.totalAllowances.toLocaleString() %></span>
                                    </div>
                                    <div class="salary-item gross">
                                        <span><strong>Gross Salary:</strong></span>
                                        <span id="previewGrossSalary"><strong>‚Çπ<%= employee.grossSalary.toLocaleString() %></strong></span>
                                    </div>
                                    <div class="salary-item">
                                        <span>Total Deductions:</span>
                                        <span id="previewDeductions">‚Çπ<%= employee.totalDeductions.toLocaleString() %></span>
                                    </div>
                                    <div class="salary-item net">
                                        <span><strong>Net Salary:</strong></span>
                                        <span id="previewNetSalary"><strong>‚Çπ<%= employee.netSalary.toLocaleString() %></strong></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary">üíæ Update Employee</button>
                        <a href="/employees/view/<%= employee._id %>" class="btn btn-secondary">‚ùå Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        // Real-time salary calculation
        function calculateSalary() {
            const baseSalary = parseFloat(document.getElementById('baseSalary').value) || 0;
            const hra = parseFloat(document.getElementById('hra').value) || 0;
            const transport = parseFloat(document.getElementById('transport').value) || 0;
            const medical = parseFloat(document.getElementById('medical').value) || 0;
            const otherAllowance = parseFloat(document.getElementById('otherAllowance').value) || 0;
            
            const pf = parseFloat(document.getElementById('pf').value) || 0;
            const tax = parseFloat(document.getElementById('tax').value) || 0;
            const insurance = parseFloat(document.getElementById('insurance').value) || 0;
            const otherDeduction = parseFloat(document.getElementById('otherDeduction').value) || 0;
            
            const totalAllowances = hra + transport + medical + otherAllowance;
            const grossSalary = baseSalary + totalAllowances;
            const totalDeductions = pf + tax + insurance + otherDeduction;
            const netSalary = grossSalary - totalDeductions;
            
            document.getElementById('previewBaseSalary').textContent = '‚Çπ' + baseSalary.toLocaleString();
            document.getElementById('previewAllowances').textContent = '‚Çπ' + totalAllowances.toLocaleString();
            document.getElementById('previewGrossSalary').textContent = '‚Çπ' + grossSalary.toLocaleString();
            document.getElementById('previewDeductions').textContent = '‚Çπ' + totalDeductions.toLocaleString();
            document.getElementById('previewNetSalary').textContent = '‚Çπ' + netSalary.toLocaleString();
        }
        
        // Add event listeners to all salary-related inputs
        const salaryInputs = ['baseSalary', 'hra', 'transport', 'medical', 'otherAllowance', 'pf', 'tax', 'insurance', 'otherDeduction'];
        salaryInputs.forEach(inputId => {
            document.getElementById(inputId).addEventListener('input', calculateSalary);
        });
        
        // Calculate on page load
        calculateSalary();
    </script>
</body>
</html>
