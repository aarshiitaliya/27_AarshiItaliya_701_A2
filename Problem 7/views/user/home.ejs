<!-- Hero Section -->
<section class="hero-section bg-primary text-white py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-4">Welcome to ShopCart</h1>
                <p class="lead mb-4">Discover amazing products at unbeatable prices. Shop from our wide range of categories and enjoy fast, secure delivery.</p>
                <div class="d-flex gap-3">
                    <a href="/products" class="btn btn-light btn-lg">
                        <i class="fas fa-shopping-bag me-2"></i>Shop Now
                    </a>
                    <a href="/categories" class="btn btn-outline-light btn-lg">
                        <i class="fas fa-th-large me-2"></i>Browse Categories
                    </a>
                </div>
            </div>
            <div class="col-lg-6 text-center">
                <i class="fas fa-shopping-cart display-1 opacity-75"></i>
            </div>
        </div>
    </div>
</section>

<!-- Categories Section -->
<section class="py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="fw-bold">Shop by Category</h2>
            <p class="text-muted">Explore our wide range of product categories</p>
        </div>
        
        <div class="row g-4">
            <% categories.slice(0, 6).forEach(category => { %>
                <div class="col-md-4 col-lg-2">
                    <a href="/category/<%= category.slug %>" class="text-decoration-none">
                        <div class="category-card text-center p-4 h-100 border rounded hover-shadow">
                            <% if (category.image) { %>
                                <img src="<%= category.image %>" alt="<%= category.name %>" class="category-image mb-3">
                            <% } else { %>
                                <i class="fas fa-folder-open display-4 text-primary mb-3"></i>
                            <% } %>
                            <h6 class="fw-bold text-dark"><%= category.name %></h6>
                            <small class="text-muted"><%= category.subcategories.length %> subcategories</small>
                        </div>
                    </a>
                </div>
            <% }); %>
        </div>
        
        <div class="text-center mt-4">
            <a href="/categories" class="btn btn-outline-primary">
                View All Categories <i class="fas fa-arrow-right ms-1"></i>
            </a>
        </div>
    </div>
</section>

<!-- Featured Products Section -->
<% if (featuredProducts.length > 0) { %>
<section class="py-5 bg-light">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="fw-bold">Featured Products</h2>
            <p class="text-muted">Handpicked products just for you</p>
        </div>
        
        <div class="row g-4">
            <% featuredProducts.forEach(product => { %>
                <div class="col-md-6 col-lg-3">
                    <div class="product-card card h-100 border-0 shadow-sm">
                        <div class="position-relative">
                            <img src="<%= product.primaryImage %>" class="card-img-top product-image" alt="<%= product.name %>">
                            <% if (product.discountPercentage > 0) { %>
                                <span class="badge bg-danger position-absolute top-0 end-0 m-2">
                                    -<%= product.discountPercentage %>%
                                </span>
                            <% } %>
                            <% if (product.featured) { %>
                                <span class="badge bg-warning position-absolute top-0 start-0 m-2">
                                    <i class="fas fa-star"></i> Featured
                                </span>
                            <% } %>
                        </div>
                        <div class="card-body d-flex flex-column">
                            <h6 class="card-title fw-bold">
                                <a href="/product/<%= product.slug %>" class="text-decoration-none text-dark">
                                    <%= product.name %>
                                </a>
                            </h6>
                            <p class="card-text text-muted small flex-grow-1">
                                <%= product.shortDescription || product.description.substring(0, 100) + '...' %>
                            </p>
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <div>
                                    <span class="h6 text-primary fw-bold"><%= product.formattedPrice %></span>
                                    <% if (product.comparePrice) { %>
                                        <small class="text-muted text-decoration-line-through ms-1">
                                            <%= product.formattedComparePrice %>
                                        </small>
                                    <% } %>
                                </div>
                                <small class="text-muted"><%= product.category.name %></small>
                            </div>
                            <div class="d-flex gap-2">
                                <button class="btn btn-primary btn-sm flex-grow-1 add-to-cart-btn" 
                                        data-product-id="<%= product._id %>">
                                    <i class="fas fa-cart-plus me-1"></i>Add to Cart
                                </button>
                                <a href="/product/<%= product.slug %>" class="btn btn-outline-secondary btn-sm">
                                    <i class="fas fa-eye"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</section>
<% } %>

