<div class="row">
    <div class="col-12">
        <h2 class="fw-bold mb-4">
            <i class="fas fa-tachometer-alt me-2"></i>Dashboard Overview
        </h2>
    </div>
</div>

<!-- Stats Cards -->
<div class="row g-4 mb-4">
    <div class="col-md-3">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h3 class="fw-bold mb-1"><%= stats.categories %></h3>
                        <p class="mb-0">Categories</p>
                    </div>
                    <i class="fas fa-folder display-4 opacity-50"></i>
                </div>
            </div>
            <div class="card-footer bg-primary bg-opacity-75">
                <a href="/admin/categories" class="text-white text-decoration-none small">
                    <i class="fas fa-arrow-right me-1"></i>Manage Categories
                </a>
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h3 class="fw-bold mb-1"><%= stats.products %></h3>
                        <p class="mb-0">Products</p>
                    </div>
                    <i class="fas fa-box display-4 opacity-50"></i>
                </div>
            </div>
            <div class="card-footer bg-success bg-opacity-75">
                <a href="/admin/products" class="text-white text-decoration-none small">
                    <i class="fas fa-arrow-right me-1"></i>Manage Products
                </a>
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="card bg-info text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h3 class="fw-bold mb-1"><%= stats.users %></h3>
                        <p class="mb-0">Users</p>
                    </div>
                    <i class="fas fa-users display-4 opacity-50"></i>
                </div>
            </div>
            <div class="card-footer bg-info bg-opacity-75">
                <a href="/admin/users" class="text-white text-decoration-none small">
                    <i class="fas fa-arrow-right me-1"></i>Manage Users
                </a>
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="card bg-warning text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h3 class="fw-bold mb-1">0</h3>
                        <p class="mb-0">Orders</p>
                    </div>
                    <i class="fas fa-shopping-cart display-4 opacity-50"></i>
                </div>
            </div>
            <div class="card-footer bg-warning bg-opacity-75">
                <a href="#" class="text-white text-decoration-none small">
                    <i class="fas fa-arrow-right me-1"></i>View Orders
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Recent Products -->
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="fas fa-box me-2"></i>Recent Products
                </h5>
                <a href="/admin/products/create" class="btn btn-primary btn-sm">
                    <i class="fas fa-plus me-1"></i>Add Product
                </a>
            </div>
            <div class="card-body">
                <% if (recentProducts.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Category</th>
                                    <th>Price</th>
                                    <th>Status</th>
                                    <th>Created</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% recentProducts.forEach(product => { %>
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <img src="<%= product.primaryImage %>" 
                                                     alt="<%= product.name %>" 
                                                     class="admin-product-thumb me-2">
                                                <div>
                                                    <h6 class="mb-0"><%= product.name %></h6>
                                                    <small class="text-muted">SKU: <%= product.sku || 'N/A' %></small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="badge bg-secondary"><%= product.category.name %></span>
                                        </td>
                                        <td>
                                            <span class="fw-bold">â‚¹<%= product.price.toLocaleString('en-IN') %></span>
                                        </td>
                                        <td>
                                            <% if (product.status === 'active') { %>
                                                <span class="badge bg-success">Active</span>
                                            <% } else if (product.status === 'inactive') { %>
                                                <span class="badge bg-danger">Inactive</span>
                                            <% } else if (product.status === 'draft') { %>
                                                <span class="badge bg-warning">Draft</span>
                                            <% } else { %>
                                                <span class="badge bg-secondary">Archived</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <small class="text-muted">
                                                <%= new Date(product.createdAt).toLocaleDateString() %>
                                            </small>
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <a href="/admin/products/<%= product._id %>/edit" 
                                                   class="btn btn-outline-primary">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <button class="btn btn-outline-danger delete-product-btn" 
                                                        data-product-id="<%= product._id %>">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <div class="text-center py-4">
                        <i class="fas fa-box display-4 text-muted mb-3"></i>
                        <h5 class="text-muted">No products yet</h5>
                        <p class="text-muted">Start by creating your first product.</p>
                        <a href="/admin/products/create" class="btn btn-primary">
                            <i class="fas fa-plus me-1"></i>Create Product
                        </a>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
    
    <!-- Quick Actions -->
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-bolt me-2"></i>Quick Actions
                </h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="/admin/categories/create" class="btn btn-outline-primary">
                        <i class="fas fa-folder-plus me-2"></i>Add Category
                    </a>
                    <a href="/admin/products/create" class="btn btn-outline-success">
                        <i class="fas fa-box me-2"></i>Add Product
                    </a>
                    <a href="/admin/users" class="btn btn-outline-info">
                        <i class="fas fa-users me-2"></i>View Users
                    </a>
                    <a href="/" target="_blank" class="btn btn-outline-secondary">
                        <i class="fas fa-external-link-alt me-2"></i>View Store
                    </a>
                </div>
            </div>
        </div>
        
        <!-- System Info -->
        <div class="card mt-4">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="fas fa-info-circle me-2"></i>System Information
                </h6>
            </div>
            <div class="card-body">
                <div class="row g-2">
                    <div class="col-6">
                        <small class="text-muted">Admin:</small>
                        <div class="fw-bold"><%= admin.fullName %></div>
                    </div>
                    <div class="col-6">
                        <small class="text-muted">Role:</small>
                        <div class="fw-bold text-capitalize"><%= admin.role.replace('_', ' ') %></div>
                    </div>
                    <div class="col-12 mt-2">
                        <small class="text-muted">Last Login:</small>
                        <div class="fw-bold">
                            <%= admin.lastLogin ? new Date(admin.lastLogin).toLocaleString() : 'First login' %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
